<Window x:Class="WpfPOS.AddProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPOS"
        mc:Ignorable="d"
        Title="New Product" Height="176.613" Width="300">
    <Grid Margin="0,0,0,4">
        <Label Content="New Product Name" FontWeight="Bold" Margin="86,10,65,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox1" Height="23" Margin="86,41,86,0" TextWrapping="Wrap" FontWeight="ExtraLight" VerticalAlignment="Top" TextChanged="textBox1_TextChanged"/>
        <Button x:Name="okBtn" Content="OK" Margin="131,100,131,0" VerticalAlignment="Top" RenderTransformOrigin="0.545,1.115" Click="Button_Click"/>
        <Label x:Name="existsLabel" Visibility="Hidden" Content="Product already exists!" Foreground="Red"  HorizontalAlignment="Left" Margin="79,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.51,0.123" Height="31" Width="134"/>
        <Label x:Name="wrongInput" Visibility="Hidden" Content="Enter only letters and spaces!" Foreground="Red" Margin="64,69,41,0" VerticalAlignment="Top" RenderTransformOrigin="0.51,0.123" Height="31"/>

    </Grid>
</Window>
